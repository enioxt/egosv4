# ==========================================
# CORTEX Environment Variables
# ==========================================
# Copy this file to .env and fill values

# Database (SQLite - auto created)
DATABASE_URL="file:./cortex.db"

# Data directory (where cortex stores data)
CORTEX_DATA_DIR="~/.local/share/cortex"

# AI Provider (choose one or more)
OPENAI_API_KEY=
OPENROUTER_API_KEY=
ANTHROPIC_API_KEY=

# LLM Settings
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.7

# Optional: Debug mode
DEBUG=false
